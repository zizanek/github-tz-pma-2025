<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Zadejte jméno"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Zadejte příjmení"
            android:layout_weight="1"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/etPlace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Zadejte bydliště"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="Zadejte věk"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            />


            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Odeslat"
                android:textSize="16sp"
                android:layout_weight="4"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/btnSendColor"
                android:textColor="@color/black"
                />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vymazat"
                android:textSize="16sp"
                android:layout_weight="4"
                android:backgroundTint="@color/btnDeleteColor"
                />

    </LinearLayout>

    <TextView
        android:id="@+id/tvInformation"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:hint="Informace"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:textSize="20sp"
        />

</LinearLayout>